<body>

  <div class="login-box">
    <h2>LetsFree Saytga Kirish</h2>
    <form id="loginForm">
      <label for="password">Parol kiriting:</label>
      <input type="password" id="password" placeholder="Parol..." required>
      <button type="submit">Kirish</button>
      <p class="error" id="error-msg">❌ Noto‘g‘ri parol, qayta urinib ko‘ring.</p>
    </form>
  </div>

  <script>
    const correctPassword = "letsfree123"; // To'g'ri parol shu yerda

    document.getElementById("loginForm").addEventListener("submit", function(e) {
      e.preventDefault();
      let password = document.getElementById("password").value;

      if (password === correctPassword) {
        window.location.href = "main.html"; // Agar parol to'g'ri bo'lsa boshqa sahifaga o'tadi
      } else {
        document.getElementById("error-msg").style.display = "block";
      }
    });
  </script>

